drop sequence books_id;
drop sequence employee_id;
drop sequence course_id;
                           

drop table admin;
drop table books;
drop table course;
drop table employee;
drop table goods;
drop table issue_books;
drop table QUALIFICATION_DETAILS_EMPLOYEE;
drop table QUALIFICATION_DETAILS_STUDENT;
drop table student;
drop table BATCH_DETAILS;

select * from tab;
purge recyclebin;

CREATE SEQUENCE Books_id START WITH    1 INCREMENT by 1;
CREATE SEQUENCE employee_id START WITH    1 INCREMENT BY   1;
CREATE SEQUENCE course_id START WITH    1 INCREMENT BY   1;


create table admin
(
    name varchar2(40) not null,
    email_id varchar2(50) unique,
    password varchar2(40) not null,
    dob  VARCHAR2(11) not null,
    image_path VARCHAR2(100) not null unique
);                            

create table books
(
purchasing_date varchar2(11) not null,
book_name varchar2(40) not null,
book_id number primary KEY,
ISBN varchar2(50),
Book_category varchar2(30) not null,
book_language varchar2(20) not null
);





create table employee
(
salary int not null,
dob varchar(11) not null,
job_timeing varchar2(19) not null,
name varchar2(40) not null,
position_name varchar2(40) not null,
father_name varchar2(40),
maritial_status varchar2(10) not null,
contact_number varchar2(15)  not null,
id number primary key,
email_id varchar2(50) unique not null,
category varchar2(10),
Gender varchar2(10) not null,
address varchar2(100),
zipcode int not null,
state varchar2(20) not null,
city varchar2(15) not null,
country varchar2(30) not null,
image_path varchar2(100) unique not null
)


create table goods
(
product_name varchar2(40) not null,
warranty_duration int,
product_desciption varchar2(100) not null,
purchase_Date varchar2(15) not null,
tin_number varchar2(50),
goods_id number primary key,
image_path varchar2(100) unique not null,
shopname varchar2(50) not null,
warranty_Type varchar2(20)
);



create table issue_books
(
    book_id number primary KEY,
    issue_date varchar2(11) not null,
    reciver_id number not null,
    FOREIGN KEY (book_id) REFERENCES books(book_id)
);



create table student
(
sumbittedfess int not null,
dob varchar(11) not null,
name varchar2(40) not null,
father_name varchar2(40),
maritial_status varchar2(10) not null,
contact_number varchar2(15)  not null,
id number primary key,
email_id varchar2(50) unique,
category varchar2(10),
Gender varchar2(10) not null,
address varchar2(100),
zipcode int not null,
state varchar2(20) not null,
city varchar2(15) not null,
country varchar2(30) not null,
image_path varchar2(100) unique not null,
faculty_id number not null,
course_id number  not null 
);

 

create table course
(
Course_duration int not null,
course_fees int not null,
course_id number primary key,
course_name varchar2(40) not null
);

create table batch_details
(
id  number  not null,
COURSE_NAME varchar2(40) not null,
batch_timeing varchar2(20) not null,
FOREIGN KEY (id) REFERENCES employee(id)
)


create table qualification_details_STUDENT(
Course varchar2(30),
complete_year int not null,
percentage varchar2(10),
institution_name varchar(40) not null,
stream varchar(15),
grade varchar(13),
course_name varchar2(20),
id  number not null,
FOREIGN KEY (id) REFERENCES STUDENT(id)
);



create table qualification_details_EMPLOYEE(
Course varchar2(30),
complete_year int not null,
percentage varchar2(10),
institution_name varchar(40) not null,
stream varchar(15),
grade varchar(13),
course_name varchar2(20),
id  number not null ,
FOREIGN KEY (id) REFERENCES employee(id)
);


COMMIT;